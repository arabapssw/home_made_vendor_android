<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_bg">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_enter_item"
        android:id="@+id/iv_logo"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />





    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/error_in_password_or_telephone_number_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:fontFamily="@font/din_arabic_bold"
        android:textColor="@color/blackish"
        android:id="@+id/tv_error"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_error"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_buy"
            android:text="@string/sign_in"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:fontFamily="@font/din_arabic_regular"
            android:layout_margin="3dp"
            android:layout_weight="2"
            style="@style/btnStyle" />

        <Button
            android:id="@+id/btn_add_to_cart"
            android:text="@string/skip"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_margin="3dp"
            android:textSize="12sp"
            android:layout_weight="1.5"
            android:textAllCaps="false"
            android:fontFamily="@font/din_arabic_regular"
            android:backgroundTint="@color/colorWhite"
            android:textColor="@color/teaBlue"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>