<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shadow">



    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@id/tv_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_toolbar" />




    <TextView
        android:id="@+id/tv_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blackish"
        android:textSize="18sp"
        android:text="@string/order_product_title"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/din_arabic_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Toolbar"

        />


    <TextView
        android:id="@+id/first_ball"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/second_ball"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/first_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorBlueWhite"
        app:layout_constraintBottom_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toStartOf="@id/second_ball"
        app:layout_constraintStart_toEndOf="@id/first_ball"
        app:layout_constraintTop_toTopOf="@id/first_ball" />


    <TextView
        android:id="@+id/second_ball"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_ball"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_white"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/third_ball"
        app:layout_constraintStart_toEndOf="@+id/first_ball" />



    <View
        android:id="@+id/second_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorBlueWhite"
        app:layout_constraintBottom_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toStartOf="@id/third_ball"
        app:layout_constraintStart_toEndOf="@id/second_ball"
        app:layout_constraintTop_toTopOf="@id/first_ball" />


    <TextView
        android:id="@+id/third_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_ball"
        android:background="@drawable/circle_step_white"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/fourth_ball"
        app:layout_constraintStart_toEndOf="@+id/second_ball"

        />


    <View
        android:id="@+id/third_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorBlueWhite"
        app:layout_constraintBottom_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toStartOf="@id/fourth_ball"
        app:layout_constraintStart_toEndOf="@id/third_ball"
        app:layout_constraintTop_toTopOf="@id/first_ball" />




    <TextView
        android:id="@+id/fourth_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_white"
        android:gravity="center"
        android:text="4"
        app:layout_constraintTop_toTopOf="@id/first_ball"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/fifth_ball"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/third_ball" />



    <View
        android:id="@+id/fourth_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorBlueWhite"
        app:layout_constraintBottom_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toStartOf="@id/fifth_ball"
        app:layout_constraintStart_toEndOf="@id/fourth_ball"
        app:layout_constraintTop_toTopOf="@id/first_ball" />

    <TextView
        android:id="@+id/fifth_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_white"
        android:gravity="center"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/first_ball"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@id/sixth_ball"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fourth_ball" />




    <View
        android:id="@+id/fifth_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorBlueWhite"
        app:layout_constraintBottom_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toStartOf="@id/sixth_ball"
        app:layout_constraintStart_toEndOf="@id/fifth_ball"
        app:layout_constraintTop_toTopOf="@id/first_ball" />

    <TextView
        android:id="@+id/sixth_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_white"
        android:gravity="center"
        android:text="6"
        app:layout_constraintTop_toTopOf="@id/first_ball"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fifth_ball" />

</androidx.constraintlayout.widget.ConstraintLayout>