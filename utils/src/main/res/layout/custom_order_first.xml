<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/first_ball"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_big_white"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_accept_order"
        android:scaleType="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/second_ball"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/done_order"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_first_ball"
        app:layout_constraintStart_toStartOf="@id/first_ball"
        app:layout_constraintTop_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toEndOf="@id/first_ball"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_first_ball"
        app:layout_constraintTop_toBottomOf="@id/tv_first_ball"
        app:layout_constraintEnd_toEndOf="@id/tv_first_ball"
        tools:text="15/2/2021"
        android:textSize="12sp"
        android:id="@+id/tv_date_first_ball"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/first_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorBlueWhite"
        app:layout_constraintBottom_toBottomOf="@id/first_ball"
        app:layout_constraintEnd_toStartOf="@id/second_ball"
        app:layout_constraintStart_toEndOf="@id/first_ball"
        app:layout_constraintTop_toTopOf="@id/first_ball" />




    <ImageView
        android:id="@+id/second_ball"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_ball"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_step_big_white"
        android:src="@drawable/ic_clock_white"
        android:scaleType="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_ball" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/processing_title"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_second_ball"
        app:layout_constraintStart_toStartOf="@id/second_ball"
        app:layout_constraintTop_toBottomOf="@id/second_ball"
        app:layout_constraintEnd_toEndOf="@id/second_ball"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_second_ball"
        app:layout_constraintTop_toBottomOf="@id/tv_second_ball"
        app:layout_constraintEnd_toEndOf="@id/tv_second_ball"
        tools:text="15/2/2021"
        android:textSize="12sp"
        android:id="@+id/tv_date_second_ball"
        android:layout_marginTop="5dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>