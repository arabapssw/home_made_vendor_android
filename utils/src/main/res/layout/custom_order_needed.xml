<!--        app:layout_constraintTop_toBottomOf="@id/order_shipment"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        />-->

    <TextView
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/change_status"
        android:id="@+id/tv_change_status"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/consttrain"
        app:layout_constraintTop_toTopOf="@id/consttrain"
        app:layout_constraintBottom_toBottomOf="@id/consttrain"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_marginEnd="10dp"
        android:id="@+id/consttrain"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_change_status"
        app:layout_constraintTop_toBottomOf="@id/order_notes"

        >

        <Spinner
            android:id="@+id/ed_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_rectangle_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_apply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_spinner_icon"
            app:layout_constraintEnd_toEndOf="@id/ed_text"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/ed_text"
            app:layout_constraintBottom_toBottomOf="@id/ed_text"
            />


        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_rectangle"
            android:gravity="center"
            android:text="@string/activate"
            android:textDirection="locale"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>