<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintHorizontal_weight="1"
        android:textDirection="locale"
        android:background="@color/colorBlueWhiteish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/order_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#45f5tt5t"
        android:textColor="@color/gray104"
        android:textStyle="bold"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_number"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_profile"
        android:drawableTint="@color/gray"

        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/first_view"
        android:textDirection="locale"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/colorBlueWhiteish"
        app:layout_constraintStart_toEndOf="@id/order_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="12:58 "
        android:textSize="12sp"
        android:textColor="@color/gray104"
        android:textStyle="bold"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_date"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_date_shape"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/first_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_number"
        android:background="@color/borderGray"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:padding="15dp"
        android:drawableStart="@drawable/location_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/order_telephone"
        app:layout_constraintTop_toBottomOf="@id/order_number"
        tools:text="alexandria"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@color/gray104"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_location"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:padding="15dp"
        app:layout_constraintHorizontal_weight="1"
        android:drawableStart="@drawable/ic_telephn_gray"
        app:layout_constraintStart_toEndOf="@id/order_location"
        app:layout_constraintTop_toBottomOf="@id/order_number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0125679"
        android:textColor="@color/gray104"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_telephone"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_location"
        android:background="@color/borderGray"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:padding="15dp"
        app:drawableStartCompat="@drawable/ic_location_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_location"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Location"
        android:textColor="@color/gray104"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_location2"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_location2"
        android:background="@color/borderGray"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_card_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_location2"
        tools:text="payment"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@color/gray104"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_payment"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_payment"
        android:background="@color/borderGray"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_payment"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="aramex"
        android:padding="15dp"
        android:textColor="@color/gray104"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_shipment"
        android:drawablePadding="15dp"
        app:drawableStartCompat="@drawable/ic_car"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_shipment"
        android:background="@color/borderGray"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_shipment"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="notes"
        android:padding="15dp"
        android:textColor="@color/gray104"
        android:fontFamily="@font/din_arabic_bold"
        android:id="@+id/order_notes"
        android:drawablePadding="15dp"
        app:drawableStartCompat="@drawable/ic_notes_icon"
        />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="0dp"-->
<!--        android:id="@+id/rv"-->
