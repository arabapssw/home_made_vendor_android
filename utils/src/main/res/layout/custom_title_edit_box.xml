<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name of item"
        android:fontFamily="@font/din_arabic_regular"
        android:id="@+id/tv_item"
        android:textColor="@color/titleBlack"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/box_linear"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/box_edit_text"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:id="@+id/iv_password_toogle"
            android:src="@drawable/ic_icon_eye"

            />

    <EditText
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:textSize="12sp"
        android:layoutDirection="rtl"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:id="@+id/ed_custom"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:background="@null"
        />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>