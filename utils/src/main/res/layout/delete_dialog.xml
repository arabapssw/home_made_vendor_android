<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg">



    <Button
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teaBlue"
        android:text="@string/delete_title"
        android:textAllCaps="false"
        android:fontFamily="@font/din_arabic_regular"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_delete"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="19dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorWhite"
        android:text="@string/cancel_title"
        android:textAllCaps="false"
        android:fontFamily="@font/din_arabic_regular"
        app:layout_constraintTop_toTopOf="@id/button_delete"
        android:textColor="@color/teaBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_delete"
        tools:layout_editor_absoluteY="19dp" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/din_arabic_regular"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableStart="@drawable/ic_delete_red"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/delete_product_title"
         />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:id="@+id/tv_delete_"
        android:src="@drawable/ic_icon_close"
        />
</androidx.constraintlayout.widget.ConstraintLayout>