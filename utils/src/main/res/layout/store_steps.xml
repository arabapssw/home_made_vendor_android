<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_step_active"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/from_step1_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/from_step1_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/teaBlue"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintEnd_toStartOf="@+id/step2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/step1"
        app:layout_constraintTop_toTopOf="@+id/step1" />

    <TextView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_step"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/from_step1_2"
        app:layout_constraintEnd_toStartOf="@+id/from_step2_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/from_step1_2"
        app:layout_constraintTop_toTopOf="@+id/from_step1_2" />

    <View
        android:id="@+id/from_step2_3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorStepInactive"
        app:layout_constraintBottom_toBottomOf="@+id/step2"
        app:layout_constraintEnd_toStartOf="@+id/step3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/step2"
        app:layout_constraintTop_toTopOf="@+id/step2" />


    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_step"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/from_step2_3"
        app:layout_constraintEnd_toStartOf="@+id/from_step3_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/from_step2_3"
        app:layout_constraintTop_toTopOf="@+id/from_step2_3" />

    <View
        android:id="@+id/from_step3_4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorStepInactive"
        app:layout_constraintBottom_toBottomOf="@+id/step3"
        app:layout_constraintEnd_toStartOf="@+id/step4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/step3"
        app:layout_constraintTop_toTopOf="@+id/step3" />

    <TextView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_done"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/from_step3_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/from_step3_4"
        app:layout_constraintTop_toTopOf="@+id/from_step3_4" />


    <TextView
        android:id="@+id/tv_store_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/store_data"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/step1"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:layout_constraintTop_toBottomOf="@+id/step1" />

    <TextView
        android:id="@+id/tv_complete_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="11sp"
        android:text="@string/complete_data"
        app:layout_constraintEnd_toEndOf="@+id/step2"
        app:layout_constraintStart_toStartOf="@+id/step2"
        app:layout_constraintTop_toBottomOf="@+id/step2" />

    <TextView
        android:id="@+id/tv_payment_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="11sp"
        android:text="@string/payment_data"
        app:layout_constraintEnd_toEndOf="@+id/step3"
        app:layout_constraintStart_toStartOf="@+id/step3"
        app:layout_constraintTop_toBottomOf="@+id/step3" />

    <TextView
        android:id="@+id/tv_created_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="11sp"
        android:text="@string/store_created"
        app:layout_constraintEnd_toEndOf="@+id/step4"
        app:layout_constraintStart_toStartOf="@+id/step4"
        app:layout_constraintTop_toBottomOf="@+id/step4" />

</androidx.constraintlayout.widget.ConstraintLayout>