<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="utilsTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/teaBlue</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">@color/teaBlue</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ChipTextStyle_Selected">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreen</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorgray
        </item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFC300</item>
        <item name="colorControlActivated">#FFC300</item>
    </style>



</resources>